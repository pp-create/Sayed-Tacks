@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
   <style>

        .color {
            width: 50px;
            background-color: #62b3a6;
            display: inline-block;
            display: inline-block;
        }

        .col-1 {
            writing-mode: vertical-rl;
        }

        .calendar {
            margin: 50px auto;
            border: 1px solid #ddd;
            padding: 20px;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .calendar-header h2 {
                margin: 0;
            }

        .calendar-days {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }



        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            grid-gap: 5px;
        }

        .calendar-cell {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

            .calendar-cell.current-month {
                background-color: #f5f5f5;
            }

        body {
            direction: rtl;
        }

        .survey-box {
            border: 2px solid #ccc;
            padding: 20px;
            margin: 20px;
        }

        .survey-header, .survey-footer {
            margin-bottom: 20px;
        }

        .qr-code {
            text-align: left;
        }

        .checkbox-group {
            display: flex;
            justify-content: space-between;
        }

        .input-group-text {
            background-color: #62b3a6;
            color: white;
        }

        .form-control {
            border-radius: 0;
        }

        .input-group {
            margin-bottom: 15px;
        }

    </style>
</head>
