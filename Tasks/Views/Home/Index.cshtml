                                categories.forEach((category, index) => {
                                    document.write(`
                                                        <tr>
                                                            <th scope="row" style="color: #fff; background-color: #348bb8;">${category}</th>
                                                            <td><input type="checkbox" name="response[${index}]" value="راض جداً"></td>
